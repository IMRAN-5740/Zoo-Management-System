@model AnimalFood

@{
    ViewData["Title"] = "Create";
}

<h1 style="text-align:center;color:green">Animal Food Create Form</h1>



<div class="row">

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="p-4 rounded border row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-8">
                <input type="hidden" asp-for="Id" />
                <div class="form-group row">
                    <div class="col-4">
                    <label for="AnimalId" class="control-label">Animal Name</label>
                    </div>
                   @* <div class="col-8">
                        <input asp-for="@Model.Categories.CategoryName" readonly="readonly" class="form-control" />

                    </div>*@
                      <div class="col-8">
                            <select type="text" asp-items="@Model.Animal" id="AnimalId" name="AnimalId" class="form-control">
                                <option value="">.Select Animal.</option>
                            </select>
                      </div>
                    <span asp-validation-for="Animal" class="text-danger"></span>

                </div>


                <div class="form-group row">
                    <div class="col-4">
                    <label for="FoodId" class="control-label">Food Name</label>
                    </div>
                   <div class="col-8">
                        @*<input asp-for="@Model.Authors.AuthorName" readonly="readonly" class="form-control" />*@
                        <select type="text" asp-items="@Model.Food" id="FoodId" name="FoodId" class="form-control">
                            <option value="">.Select Author.</option>
                        </select>
                    </div>
                      <span asp-validation-for="Food" class="text-danger"></span>
                   
                </div>


                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Quantity"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Quantity" class="form-control" />

                    </div>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>



              
                <br />
                <div class="form-group text-center">
                    <input type="submit" class="btn btn-outline-success" value="Create Data" />
                    <a asp-action="Index" class="btn btn-outline-success"> <i class="fa-solid fa-arrow-right-to-bracket"></i>&nbsp;Back to List</a>
                </div>
     

               
            </div>
         
            </div>
    </form>
</div>

