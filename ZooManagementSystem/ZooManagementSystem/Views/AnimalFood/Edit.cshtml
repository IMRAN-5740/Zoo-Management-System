@model E_Library.Models.LibraryBook.BookEditVM

@{
    ViewData["Title"] = "Edit";
}

<h1 style="text-align:center;color:green">Book Edit Form</h1>
<style>
    #Design {
        color: green;
        font-size: larger;
    }
</style>


<div class="row">

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="p-4 rounded border row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4" id="Design">
                        <label asp-for="BookName"></label>
                    </div>
                    <div class="col-8">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Picture" />
                        <input asp-for="BookName"  class="form-control" />

                    </div>
                    <span asp-validation-for="BookName" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-4" id="Design">
                        <label asp-for="BookCode"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="BookCode"  class="form-control" />

                    </div>
                    <span asp-validation-for="BookCode" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-4" id="Design">
                        <label asp-for="@Model.Authors.AuthorName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.Authors.AuthorName"  class="form-control" />

                    </div>
                    <span asp-validation-for="@Model.Authors.AuthorName" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-4" id="Design">
                        <label asp-for="@Model.Categories.CategoryName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.Categories.CategoryName"  class="form-control" />

                    </div>
                    <span asp-validation-for="@Model.Categories.CategoryName" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-4" id="Design">
                        <label asp-for="PublicationName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PublicationName"  class="form-control" />

                    </div>
                    <span asp-validation-for="PublicationName" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-4" id="Design">
                        <label asp-for="Picture"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Picture" type="file" class="form-control" />

                    </div>
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>


                <div class="form-group row">
                    <div class="col-4" id="Design">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price"  class="form-control" />

                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-4" id="Design">
                        <label asp-for="Quantity"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Quantity"  class="form-control" />

                    </div>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>



                <div class="form-group row">
                    <div class="col-4" id="Design">
                        <label asp-for="IsAvailable"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="IsAvailable" class="" type="checkbox" />

                    </div>
                    <span asp-validation-for="IsAvailable" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group text-center">
                    <input type="submit" class="btn btn-outline-primary" value="Update Data" />
                    <a asp-action="Index" class="btn btn-success"> <i class="fa-solid fa-arrow-right-to-bracket"></i>&nbsp;Back to List</a>
                </div>
            </div>
            <div class="col-1"></div>
            <div class="col-3">
                <h3 style="text-align:center ;color:red">Book Picture</h3>
                <img src="~/@Model.Picture" width="300" height="250" />
                @if (Model.IsAvailable)
                {
                    <img src="~/BookImages/in-stock.jpg" width="300" height="70" />
                }
                else
                {
                    <img src="~/BookImages/out-of-stock.jpg" width="300" height="70" />
                }
            </div>


        </div>
    </form>
</div>
